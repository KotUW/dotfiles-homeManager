{
  "vim_mode": false,
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2",
    "dock": "left"
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Mocha",
    "dark": "Ros√© Pine"
  },
  // "base_keymap": "SublimeText",
  "ui_font_size": 19,
  "buffer_font_size": 22,
  // "buffer_font_family": "JetBrains Mono",
  "soft_wrap": "editor_width",
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "project_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "notification_panel": {
    "dock": "left"
  },
  "autosave": "on_focus_change",
  "journal": {
    "path": "~/work/sync",
    "hour_format": "hour24"
  },
  "jupyter": {
    "kernel_selections": {
      "python": "python3"
    }
  },
  "terminal": {
    "shell": {
      "program": "/home/evil/.nix-profile/bin/fish"
    },
    "copy_on_select": true,
    "env": {
      "EDITOR": "zed"
    }
  },
  "show_inline_completions": false,
  "features": {
    "inline_completion_provider": "supermaven"
  },

  "inlay_hints": {
    "enabled": true
  },

  "languages": {
    "Python": {
      // "language_servers": ["ruff"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },

  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeInlayVariableTypeHints": true
        }
      }
    }
  },
  "auto_update": true
}
